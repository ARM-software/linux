	dp0: display@200000 {
		compatible = "arm,mali-dp550";
		reg = <0x200000 0x20000>;
		interrupts = <3>, <3>;
		interrupt-names = "DE", "SE";
		clocks = <&fpgaosc2>, <&dpu_mclk>, <&dpu_aclk>, <&dpu_aclk>;
		clock-names = "pxclk", "mclk", "aclk", "pclk";
		#stream-id-cells = <5>;
		status = "disabled";
		port {
			dp0_out: endpoint {

			};
		};
	};

	dp1: display@220000 {
		compatible = "arm,mali-dp550";
		reg = <0x220000 0x20000>;
		interrupts = <3>, <3>;
		interrupt-names = "DE", "SE";
		clocks = <&fpgaosc2>, <&dpu_mclk>, <&dpu_aclk>, <&dpu_aclk>;
		clock-names = "pxclk", "mclk", "aclk", "pclk";
		#stream-id-cells = <5>;
		status = "disabled";
		port {
			dp1_out: endpoint {

			};
		};
	};

	/* The MMU-500 is used (with two TBUs) for some DP550 bitfiles */
	smmu_dp: smmu@300000 {
		compatible = "arm,mmu-500";
		reg = <0x300000 0x10000>;
		#global-interrupts = <1>;
		interrupts = <3>, <3>, <3>;
		mmu-masters = <&dp0 0x008 0x009 0x00a 0x00b 0x00c>,
			      <&dp1 0x408 0x409 0x40a 0x40b 0x40c>;
		status = "disabled";
	};
